{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    /* 경로 설정 */
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["./public/assets/*"],
      "@api/*": ["./src/api/*"],
      "@components/*": ["./src/components/*"],
      "@const/*": ["./src/const/*"],
      "@data/*": ["./src/data/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@lib/*": ["./src/lib/*"],
      "@pages/*": ["./src/pages/*"],
      "@recoil/*": ["./src/recoil/*"],
      "@styles/*": ["./src/styles/*"],
      "@types/*": ["./src/types/*"],
      "@utils/*": ["./src/utils/*"],

      ".src/*": ["./src/*"],
      ".assets/*": ["./public/assets/*"],
      "@src/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "./@types/*.d.ts",
    "__test__/__mocks__/fileMock.js"
  ],
  "exclude": ["node_modules"]
}
